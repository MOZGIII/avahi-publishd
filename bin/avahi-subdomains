#!/bin/bash
set -euo pipefail

trap 'pkill -P $$' EXIT

AVAHI_SUBDOMAINS_CONF_DIR="/etc/avahi-subdomains"

AVAHI_SUBDOMAINS_LIST="${AVAHI_SUBDOMAINS_LIST:-"$AVAHI_SUBDOMAINS_CONF_DIR/subdomains"}"
AVAHI_FQDNS_LIST="${AVAHI_FQDNS_LIST:-"$AVAHI_SUBDOMAINS_CONF_DIR/fqdns"}"

if [[ "$(uname -s)" == "Linux" ]]; then
  mapfile -t IPS < <(ip -json addr show | jq -r '.[].addr_info[] | select(.scope != "host") | .local')
else
  IPS=(192.168.0.20) # mock for testing on unsupported platforms
fi

HOSTNAME="${HOSTNAME_OVERRIDE:-"$(hostnamectl hostname --static)"}"
ZONE="${ZONE_OVERRIDE:-"local"}"

printf "Zone: %s\n" "$ZONE"
printf "Hostname: %s\n" "$HOSTNAME"
printf "IPs:\n"
for IP in "${IPS[@]}"; do
  printf "  %s\n" "$IP"
done

spawn-publish() {
  local FQDN="$1"

  for IP in "${IPS[@]}"; do
    echo "> $FQDN $IP"
    avahi-publish -a "$FQDN" -R "$IP" &
  done
}

while IFS= read -r SUBDOMAIN; do
  spawn-publish "$SUBDOMAIN.$HOSTNAME.$ZONE"
done <"$AVAHI_SUBDOMAINS_LIST"

while IFS= read -r FQDN; do
  spawn-publish "$FQDN"
done <"$AVAHI_FQDNS_LIST"

wait -n
